   <p>Resultado:<span id="resultado">0</span></p>

    <script>
      // JS: DECORE - Cria a l√≥gica da conta 
      function fazerSoma() {
        // 1. Busca os valores pelo ID
         const n1 = document.getElementById('valor1') .value;
        // 2.converte para o numero e soma 
        const total = Number(n1) + Number(n2);
        // 3. Exibe na tela
        document.getElementById('resultado').innerText = total; 
      }
